{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "sonarlogs",
      "host": {
        "sourcePath": "/opt/sonar/logs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "sonarqube",
      "image": "sonarqube:alpine",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 9000,
          "containerPort": 9000
        },
        {
          "hostPort": 9092,
          "containerPort": 9092
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "sonarlogs",
          "containerPath": "/opt/sonar/logs"
        }
      ]
    }
  ]
}
